<meta name="viewport" content="width=device-width, initial-scale=1.0">

<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <% if (query && query.length > 0) { %>
    <h3>Search Results for "<%= query %>"</h3>
  <% } else { %>
    <h3>All Listings</h3>
  <% } %>

  <hr />

  <% if (listings.length === 0) { %>
    <div class="text-center mt-5">
      <h4 class="text-muted">ðŸ˜” No listings found for "<%= query %>"</h4>
      <p>Try searching for another city, country, or listing name.</p>
      <a href="/listings" class="btn btn-outline-dark mt-3">Back to Listings</a>
    </div>
  <% } else { %>
    <div class="row mt-4">
      <% listings.forEach(listing => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
              <p class="card-text fw-bold">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
              <a href="/listings/<%= listing._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
