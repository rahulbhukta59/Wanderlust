<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="text-center fw-bold mb-4">My Bookings</h2>

  <% if (bookings.length === 0) { %>
    <p class="text-center">You haven’t made any bookings yet.</p>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm rounded-3">
            <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="<%= booking.listing.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= booking.listing.title %></h5>
              <p>Check-in: <%= booking.checkIn.toDateString() %></p>
              <p>Check-out: <%= booking.checkOut.toDateString() %></p>
              <p>Total: ₹<%= booking.totalPrice %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
